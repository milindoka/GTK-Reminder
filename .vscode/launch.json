{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch hello",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/hello",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "build helloworld GTK3mm",
      "environment": [
        { "name": "LD_LIBRARY_PATH", "value": "" },
        { "name": "LD_PRELOAD", "value": "" },
        { "name": "SNAP", "value": "" },
        { "name": "SNAP_NAME", "value": "" }
      ],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}